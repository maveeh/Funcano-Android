<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="#fff"
    android:layout_height="match_parent">
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        style="@style/Widget.WebViewApp.Toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        app:contentInsetStart="0dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="?android:attr/actionBarSize">

            <LinearLayout
                android:id="@+id/ll_newevent_back"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:gravity="center"
                android:layout_marginLeft="5dp">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="match_parent"
                    android:layout_alignParentLeft="true"
                    android:padding="5dp"
                    android:src="@drawable/img_back" />
            </LinearLayout>
            <TextView
                android:id="@+id/txt_title"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textColor="#000"
                android:gravity="center"
                android:textSize="16sp"
                android:layout_centerInParent="true"
                android:text="Create Flyer"/>
        </RelativeLayout>
    </android.support.v7.widget.Toolbar>
<ScrollView
    android:scrollbars="none"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:gravity="center">
            <ImageView
                android:scaleType="centerCrop"
                android:id="@+id/img_event_main"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/default_back" />
            <ImageView
                android:id="@+id/img_sel_event"
                android:layout_centerInParent="true"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:src="@drawable/add_event1" />
        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:weightSum="3"
            android:background="#fff"
            android:layout_marginBottom="10dp"
            android:layout_height="45dp">
            <TextView
                android:layout_weight=".7"
                android:layout_alignParentLeft="true"
                android:layout_width="0dp"
                android:gravity="center|left"
                android:textColor="#9e9e9e"
                android:typeface="sans"
                android:visibility="gone"
                android:layout_height="match_parent"
                android:text="Event Name"/>
            <EditText
                android:inputType="textCapWords"
                android:textSize="16sp"
                android:id="@+id/edtEventName"
                android:background="@drawable/create_event_input_bg"
                android:layout_width="match_parent"
                android:padding="5dp"
                android:text=""
                android:hint="Event Name"
                android:layout_height="match_parent" />
        </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:weightSum="3"
                android:layout_marginBottom="10dp"
                android:layout_height="45dp">
                <TextView
                    android:textColor="#9e9e9e"
                    android:typeface="sans"
                    android:layout_weight=".7"
                    android:layout_alignParentLeft="true"
                    android:layout_width="0dp"
                    android:gravity="center|left"
                    android:visibility="gone"
                    android:layout_height="match_parent"
                    android:text="Location"/>
                <AutoCompleteTextView
                    android:imeOptions="actionNext"
                    android:inputType="textAutoComplete"
                    android:textSize="16sp"
                    android:id="@+id/txtEventLoc"
                    android:padding="5dp"
                    android:hint="Location"
                    android:background="@drawable/create_event_input_bg"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </LinearLayout>
            <!--<LinearLayout-->
                <!--android:layout_marginBottom="10dp"-->
                <!--android:layout_width="match_parent"-->
                <!--android:weightSum="3"-->
                <!--android:layout_height="45dp">-->
                <!--<TextView-->
                    <!--android:textColor="#9e9e9e"-->
                    <!--android:typeface="sans"-->
                    <!--android:layout_weight=".7"-->
                    <!--android:layout_alignParentLeft="true"-->
                    <!--android:layout_width="0dp"-->
                    <!--android:visibility="gone"-->
                    <!--android:gravity="center|left"-->
                    <!--android:layout_height="match_parent"-->
                    <!--android:text="Postcode"/>-->
                <!--<AutoCompleteTextView-->
                    <!--android:imeOptions="actionNext"-->
                    <!--android:inputType="textAutoComplete"-->
                    <!--android:textSize="16sp"-->
                    <!--android:hint="Postcode"-->
                    <!--android:padding="5dp"-->
                    <!--android:layout_width="match_parent"-->
                    <!--android:layout_height="match_parent"-->
                    <!--android:id="@+id/edtEventPostCode"-->
                    <!--android:background="@drawable/create_event_input_bg"-->
                    <!--/>-->
            <!--</LinearLayout>-->
        <LinearLayout
            android:layout_width="match_parent"
            android:weightSum="3"
            android:visibility="gone"
            android:layout_marginBottom="10dp"
            android:layout_height="45dp">
            <TextView
                android:textColor="#9e9e9e"
                android:typeface="sans"
                android:layout_weight=".7"
                android:layout_alignParentLeft="true"
                android:layout_width="0dp"
                android:gravity="center|left"
                android:layout_height="match_parent"
                android:text="Location"/>
            <EditText
                android:inputType="text"
                android:textSize="16sp"
                android:id="@+id/edtEventLoc"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:background="@drawable/create_event_input_bg"
                android:layout_width="0dp"
                android:layout_weight="2.3"
                android:layout_height="match_parent" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:weightSum="3"
            android:layout_marginBottom="10dp"
            android:layout_height="45dp">
            <TextView
                android:textColor="#9e9e9e"
                android:typeface="sans"
                android:visibility="gone"
                android:layout_weight=".7"
                android:layout_alignParentLeft="true"
                android:layout_width="0dp"
                android:gravity="center|left"
                android:layout_height="match_parent"
                android:text="Start Date"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:weightSum="3"
                android:gravity="center"
                android:layout_marginBottom="10dp"
                android:layout_height="45dp">
            <TextView
                android:hint="Start Date"
                android:id="@+id/btnEventStartDate"
                android:textAllCaps="false"
                android:padding="5dp"
                android:gravity="center|left"
                android:background="@drawable/create_event_input_bg"
                android:layout_width="0dp"
                android:layout_weight="1.5"
                android:text=""
                android:textColor="#000"
                android:layout_height="match_parent" />
                <TextView
                    android:layout_marginLeft="5dp"
                    android:hint="Start Time"
                    android:id="@+id/btnEventStartTime"
                    android:padding="5dp"
                    android:gravity="center|left"
                    android:background="@drawable/create_event_input_bg"
                    android:layout_width="0dp"
                    android:textColor="#000"
                    android:layout_weight="1.5"
                    android:layout_height="match_parent" />

                </LinearLayout>
        </LinearLayout>
            <LinearLayout
                android:id="@+id/ll_endDate"
                android:layout_width="match_parent"
                android:weightSum="3"
                android:visibility="gone"
                android:layout_marginBottom="10dp"
                android:layout_height="45dp">
                <TextView
                    android:textColor="#9e9e9e"
                    android:typeface="sans"
                    android:layout_weight=".7"
                    android:layout_alignParentLeft="true"
                    android:layout_width="0dp"
                    android:gravity="center|left"
                    android:visibility="gone"
                    android:layout_height="match_parent"
                    android:text="End Date"/>

                <TextView
                    android:hint="End Date"
                    android:textAllCaps="false"
                    android:paddingLeft="5dp"
                    android:textColor="#000"
                    android:clickable="false"
                    android:gravity="center|left"
                    android:background="@drawable/disable_edittext"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:weightSum="3"
            android:gravity="center"
            android:layout_marginBottom="10dp"
            android:layout_height="45dp">
            <TextView
                android:hint="End Date"
                android:id="@+id/btnEventEndDate"
                android:textAllCaps="false"
                android:padding="5dp"
                android:textColor="#000"
                android:clickable="false"
                android:gravity="center|left"
                android:background="@drawable/create_event_input_bg"
                android:layout_width="0dp"
                android:layout_weight="1.5"
                android:layout_height="match_parent" />
            <TextView
                android:id="@+id/btnEventEndTime"
                android:hint="End Time"
                android:gravity="center|left"
                android:padding="5dp"
                android:layout_marginLeft="5dp"
                android:textColor="#000"
                android:background="@drawable/create_event_input_bg"
                android:layout_width="0dp"
                android:layout_weight="1.5"
                android:layout_height="match_parent"/>
        </LinearLayout>
        <LinearLayout
            android:layout_marginBottom="10dp"
            android:layout_width="match_parent"
            android:weightSum="3"
            android:layout_height="45dp">
            <TextView
                android:textColor="#9e9e9e"
                android:typeface="sans"
                android:layout_weight=".8"
                android:layout_alignParentLeft="true"
                android:layout_width="0dp"
                android:gravity="center|left"
                android:visibility="gone"
                android:layout_height="match_parent"
                android:text="Search Words"/>
            <EditText
                android:gravity="center|left"
                android:layout_height="match_parent"
                android:hint="Search Words"
                android:inputType="text"
                android:textSize="16sp"
                android:id="@+id/edtEventSearchKeys"
                android:padding="5dp"
                android:digits=" ,abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ"
                android:background="@drawable/create_event_input_bg"
                android:layout_width="match_parent"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_marginBottom="10dp"
            android:layout_width="match_parent"
            android:weightSum="3"
            android:layout_height="45dp">
            <TextView
                android:visibility="gone"
                android:textColor="#9e9e9e"
                android:typeface="sans"
                android:layout_weight=".9"
                android:layout_alignParentLeft="true"
                android:layout_width="0dp"
                android:singleLine="true"
                android:gravity="center|left"
                android:layout_height="match_parent"
                android:text="Select Category"/>
            <LinearLayout
                android:background="@drawable/create_event_input_bg"
                android:layout_width="0dp"
                android:layout_weight="3"
                android:paddingRight="7dp"
                android:layout_height="match_parent" >
                <Spinner
                    android:id="@+id/spinner_cat"
                    android:layout_width="match_parent"
                    style="@android:style/Widget.Spinner.DropDown"
                    android:layout_height="match_parent"
                    android:dropDownWidth="fill_parent"
                    android:background="@drawable/shape_drop_down_normal"
                    />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_marginBottom="10dp"
            android:layout_width="match_parent"
            android:weightSum="3"
            android:minHeight="100dp"
            android:layout_height="wrap_content">
            <TextView
                android:textColor="#9e9e9e"
                android:typeface="sans"
                android:layout_weight=".7"
                android:layout_alignParentLeft="true"
                android:layout_width="0dp"
                android:gravity="top|left"
                android:visibility="gone"
                android:layout_height="match_parent"
                android:text="Description"/>
            <EditText
                android:hint="Description"
                android:textSize="16sp"
                android:id="@+id/edtEventDesc"
                android:padding="5dp"
                android:background="@drawable/create_event_input_bg"
                android:layout_width="match_parent"
                android:gravity="top|left"
                android:lines="5"
                android:maxLines="5"
                android:maxLength="300"
                android:layout_height="match_parent" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#c2c2c2"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_repeat"
            android:layout_width="match_parent"
            android:weightSum="3"
            android:layout_marginBottom="10dp"
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:layout_height="wrap_content"
            android:minHeight="55dp">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="3"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_height="match_parent">
            <TextView
                android:textColor="#9e9e9e"
                android:typeface="sans"
                android:layout_alignParentLeft="true"
                android:layout_width="match_parent"
                android:gravity="center|left"
                android:textSize="16sp"
                android:layout_height="wrap_content"
                android:text="Repeat"/>
                <TextView
                    android:layout_marginTop="5dp"
                    android:id="@+id/txtRepeatType"
                    android:textColor="#9e9e9e"
                    android:typeface="sans"
                    android:layout_alignParentLeft="true"
                    android:layout_width="match_parent"
                    android:gravity="center|left"
                    android:layout_height="wrap_content"
                    android:text="One-time event"
                    />
            </LinearLayout>
                <CheckBox
                    android:id="@+id/chkRepeat"
                    android:clickable="false"
                    android:button="@drawable/customdrawablecheckbox"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:gravity="top">
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#c2c2c2"/>
        </LinearLayout>
        <LinearLayout
            android:layout_marginBottom="10dp"
            android:layout_width="match_parent"
            android:weightSum="3"
            android:layout_height="45dp">
            <TextView
                android:textColor="#9e9e9e"
                android:typeface="sans"
                android:textSize="16sp"
                android:layout_weight="3"
                android:layout_alignParentLeft="true"
                android:layout_width="0dp"
                android:gravity="center|left"
                android:layout_height="match_parent"
                android:text="This event is free"/>
            <CheckBox
                android:id="@+id/chkEventCost"
                android:layout_width="wrap_content"
                android:checked="true"
                android:button="@drawable/customdrawablecheckbox"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:layout_marginBottom="20dp"
            android:layout_width="match_parent"
            android:weightSum="3"
            android:layout_height="45dp">
            <TextView
                android:textColor="#9e9e9e"
                android:typeface="sans"
                android:layout_weight=".7"
                android:layout_alignParentLeft="true"
                android:layout_width="0dp"
                android:gravity="center|left"
                android:visibility="gone"
                android:layout_height="match_parent"
                android:text="Min Price"/>
            <EditText
                android:textSize="16sp"
                android:textColorHint="#9e9e9e"
                android:id="@+id/edtEventMinCost"
                android:padding="5dp"
                android:background="@drawable/disable_edittext"
                android:layout_width="0dp"
                android:layout_weight="1.5"
                android:hint="Min Price"
                android:focusable="false"
                android:clickable="false"
                android:inputType="numberDecimal"
                android:layout_height="match_parent" />
            <TextView
                android:textColor="#9e9e9e"
                android:typeface="sans"
                android:layout_weight=".7"
                android:layout_alignParentLeft="true"
                android:layout_width="0dp"
                android:gravity="center"
                android:visibility="gone"
                android:layout_height="match_parent"
                android:text="Max Price"/>
            <EditText
                android:inputType="numberDecimal"
                android:textSize="16sp"
                android:textColorHint="#9e9e9e"
                android:id="@+id/edtEventMaxCost"
                android:padding="5dp"
                android:background="@drawable/disable_edittext"
                android:layout_width="0dp"
                android:layout_marginLeft="5dp"
                android:layout_weight="1.5"
                android:focusable="false"
                android:clickable="false"
                android:hint="Max Price"
                android:layout_height="match_parent" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/txtCreateEvent"
                android:layout_width="150dp"
                android:layout_height="45dp"
                android:text="Create Flyer"
                android:gravity="center"
                android:background="@drawable/create_flyer"/>
        </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</ScrollView>
</LinearLayout>