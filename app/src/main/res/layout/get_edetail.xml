<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="#fff"
    android:layout_height="match_parent">
    <android.support.v7.widget.Toolbar
        android:id="@+id/event_toolbar"
        style="@style/Widget.WebViewApp.Toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        app:contentInsetStart="0dp">
        <RelativeLayout
            android:id="@+id/llBack"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:id="@+id/ll_event_back"
                android:gravity="center|left"
                android:layout_alignParentLeft="true"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp">
                <ImageView
                    android:layout_width="30dp"
                    android:padding="5dp"
                    android:layout_height="30dp"
                    android:src="@drawable/img_back"
                    android:layout_alignParentLeft="true" />
            </LinearLayout>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Flyer"
                    android:textSize="16sp"
                    android:gravity="center"
                    android:textColor="#000"/>

        </RelativeLayout>

    </android.support.v7.widget.Toolbar>
    <ScrollView
        android:scrollbars="none"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:id="@+id/ll_main"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:visibility="gone">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="220dp">
                <ImageView
                    android:id="@+id/img_event_main"
                    android:scaleType="centerCrop"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/default_back"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_alignParentTop="true"
                    android:background="#05000000"
                    android:gravity="center"
                    android:paddingLeft="8dp"
                    android:paddingRight="8dp"
                    android:layout_height="wrap_content"
                    android:minHeight="35dp">
                    <TextView
                        android:textColor="#fff"
                        android:textSize="12sp"
                        android:id="@+id/txtCost"
                        android:layout_weight="3.5"
                        android:text="$4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:src="@drawable/distance"/>

                    <TextView
                        android:textColor="#fff"
                        android:textSize="12sp"
                        android:text="2m"
                        android:layout_marginLeft="5dp"
                        android:gravity="center|right"
                        android:id="@+id/txtDistance"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="8dp"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:background="#05000000"
                    android:layout_alignParentBottom="true"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:orientation="horizontal">
                        <!--<com.app.funfoapp.common.CircularImageView-->
                            <!--android:id="@+id/img_person"-->
                            <!--android:layout_width="match_parent"-->
                            <!--android:layout_height="match_parent"-->
                            <!--android:src="@drawable/default_dp"/>-->

                        <com.makeramen.roundedimageview.RoundedImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:id="@+id/img_person"
                            app:riv_border_width="1dp"
                            app:riv_corner_radius="20dp"
                            app:riv_border_color="#fff838"
                            app:riv_oval="true"
                            android:src="@drawable/default_dp"/>

                        <ProgressBar
                            android:id="@+id/pb1"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:visibility="gone"
                            />
                    </LinearLayout>

                <TextView
                    android:id="@+id/txtUsername"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Name"
                    android:layout_marginLeft="5dp"
                    android:gravity="center|left"
                    android:textColor="#fff838"
                    android:textSize="12sp"
                     />
                </LinearLayout>
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">

                <TextView
                    android:id="@+id/txtEventName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="sasd"
                    android:textSize="18sp"
                    android:capitalize="words"
                    android:gravity="center"
                    android:textColor="#191919"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginTop="5dp">
                <TextView
                    android:id="@+id/txtStartDate"
                    android:layout_width="wrap_content"
                    android:textSize="14sp"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="#191919"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:textSize="14sp"
                    android:layout_height="wrap_content"
                    android:text="  "
                    android:textColor="#191919"/>
                <TextView
                    android:id="@+id/txtStartTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="14sp"
                    android:textColor="#191919"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="1"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:layout_marginTop="10dp"
                android:gravity="top"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/txtLocation"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="14sp"
                    android:layout_gravity="center|left"
                    android:textColor="#191919"/>
                <TextView
                    android:id="@+id/txtCatName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:layout_marginLeft="15dp"
                    android:textSize="14sp"
                    android:gravity="center|right"
                    android:textColor="#191919"/>
            </LinearLayout>
            <TextView
                android:textColor="#191919"
                android:textSize="12sp"
                android:text=""
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:layout_marginTop="10dp"
                android:id="@+id/txtDesc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <fragment
                    android:layout_marginTop="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:id="@+id/map"
                    android:name="com.google.android.gms.maps.SupportMapFragment" />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@android:color/transparent"/>
            </FrameLayout>



            <TextView
                android:id="@+id/txtShareIt"
                android:textColor="#191919"
                android:textSize="14sp"
                android:layout_marginTop="8dp"
                android:text="Share It"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:gravity="center"
                android:orientation="horizontal"
                >
                <ImageView
                    android:id="@+id/img_fb"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/fb_share"/>
                <ImageView
                    android:id="@+id/img_tw"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="10dp"
                    android:src="@drawable/t_share"/>
                <ImageView
                    android:id="@+id/img_wa"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="10dp"
                    android:src="@drawable/w_share"/>
                <ImageView
                    android:id="@+id/img_go"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="10dp"
                    android:src="@drawable/g_share"/>
                <ImageView
                    android:id="@+id/img_share"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="10dp"
                    android:src="@drawable/share_"/>
            </LinearLayout>
            <TextView
                android:id="@+id/txtComment"
                android:textColor="#191919"
                android:textSize="14sp"
                android:layout_marginTop="8dp"
                android:text="Comments:"
                android:visibility="gone"
                android:gravity="center|left"
                android:layout_marginLeft="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <LinearLayout
                android:id="@+id/llCommentContainer"
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:background="#0000ff"
                android:layout_marginTop="5dp"
                android:layout_height="wrap_content">
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:padding="8dp"
                android:gravity="center"
                android:orientation="horizontal">
                <LinearLayout
                    android:id="@+id/llRemind"
                    android:background="@drawable/detial_btm"
                    android:layout_width="0dp"
                    android:gravity="center"
                    android:layout_height="match_parent"
                    android:layout_weight=".8">
                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/remind_detail"/>
                    <TextView
                        android:textColor="#191919"
                        android:layout_marginLeft="5dp"
                        android:gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="Remind Me"
                        android:textSize="12sp"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/llComment"
                    android:background="@drawable/detial_btm"
                    android:layout_width="0dp"
                    android:gravity="center"
                    android:layout_marginLeft="10dp"
                    android:layout_height="match_parent"
                    android:layout_weight=".8">
                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/comment_detail"/>
                    <TextView
                        android:textColor="#191919"
                        android:layout_marginLeft="5dp"
                        android:gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="Comment"
                        android:textSize="12sp"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/llShare"
                android:background="@drawable/detial_btm"
                android:layout_width="0dp"
                android:gravity="center"
                android:layout_marginLeft="10dp"
                android:layout_height="match_parent"
                android:layout_weight=".8">
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/share_detail"/>
                <TextView
                    android:textColor="#191919"
                    android:layout_marginLeft="5dp"
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Share"
                    android:textSize="12sp"/>
            </LinearLayout>
            </LinearLayout>
            </LinearLayout>
    </ScrollView>
</LinearLayout>