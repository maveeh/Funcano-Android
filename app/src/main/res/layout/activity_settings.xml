<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@+id/settings_toolbar"
        style="@style/Widget.WebViewApp.Toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        app:contentInsetStart="0dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/ll_settings_back"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:gravity="center"
                android:layout_marginLeft="5dp">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="match_parent"
                    android:layout_alignParentLeft="true"
                    android:padding="5dp"
                    android:src="@drawable/img_back" />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="Settings"
                android:textSize="16sp"
                android:textColor="#000"
                />
        </RelativeLayout>

    </android.support.v7.widget.Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#fff"
        android:orientation="vertical"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">

        <LinearLayout
            android:id="@+id/ll_settings_noti"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:background="@drawable/shape_for_new_screen"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:src="@drawable/img_settings_notification" />

            <TextView
                android:id="@+id/txt_settings_noti"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:text="Notifications"
                android:textColor="#191919"
                android:textSize="16sp" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@drawable/img_settings_divider" />

        <LinearLayout
            android:id="@+id/ll_settings_changepass"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:background="@drawable/shape_for_new_screen"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:src="@drawable/img_settings_changepassword" />

            <TextView
                android:id="@+id/txt_settings_changepass"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:text="Change Password"
                android:textColor="#191919"
                android:textSize="16sp" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@drawable/img_settings_divider" />

        <LinearLayout
            android:id="@+id/ll_settings_legal"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:background="@drawable/shape_for_new_screen"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:src="@drawable/img_legal" />

            <TextView
                android:id="@+id/txt_settings_legal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:text="Legal"
                android:textColor="#191919"
                android:textSize="16sp" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@drawable/img_settings_divider" />

        <LinearLayout
            android:id="@+id/ll_settings_privacy"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:background="@drawable/shape_for_new_screen"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:src="@drawable/img_privacy" />

            <TextView
                android:id="@+id/txt_settings_privacy"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:text="Privacy Policy"
                android:textColor="#191919"
                android:textSize="16sp" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@drawable/img_settings_divider" />

        <LinearLayout
            android:id="@+id/ll_settings_terms"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:background="@drawable/shape_for_new_screen"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:src="@drawable/img_terms" />

            <TextView
                android:id="@+id/txt_settings_terms"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:text="Terms of use"
                android:textColor="#191919"
                android:textSize="16sp" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>