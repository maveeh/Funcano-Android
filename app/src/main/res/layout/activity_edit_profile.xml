<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:orientation="vertical">

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <android.support.v7.widget.Toolbar
                android:id="@+id/editPermium_toolbar"
                style="@style/Widget.WebViewApp.Toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                app:contentInsetStart="0dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/ll_edit_back"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignParentLeft="true"
                        android:layout_marginLeft="5dp"
                        android:gravity="center|left">

                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_alignParentLeft="true"
                            android:padding="5dp"
                            android:src="@drawable/img_back" />
                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="Edit Profile"
                        android:textSize="16sp"
                        android:textColor="#000" />

                </RelativeLayout>

            </android.support.v7.widget.Toolbar>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="210dp">

                <ImageView
                    android:id="@+id/img_coverpic"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/default_back_profile" />


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="130dp"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:orientation="horizontal">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical">

                        <com.makeramen.roundedimageview.RoundedImageView
                            xmlns:app="http://schemas.android.com/apk/res-auto"
                            android:layout_width="130dp"
                            android:layout_height="130dp"
                            android:id="@+id/img_premium_userimage"
                            app:riv_border_width="1dp"
                            app:riv_corner_radius="65dp"
                            app:riv_border_color="#fff838"
                            app:riv_oval="true"
                            android:src="@drawable/default_dp"/>

                        <ImageView
                            android:id="@+id/img_edt_userimage"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:src="@drawable/img_edit_pic"
                            android:layout_alignParentBottom="true"
                            android:layout_alignRight="@+id/img_premium_userimage"
                            android:layout_alignEnd="@+id/img_premium_userimage" />

                    </RelativeLayout>
                </RelativeLayout>
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:weightSum="2"
                    android:layout_marginBottom="10dp"
                    android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="45dp"
                    android:background="#fff"
                    android:layout_marginRight="10dp">

                    <EditText
                        android:id="@+id/edt_premium_firstname"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/create_event_input_bg"
                        android:hint="First name"
                        android:inputType="textCapWords"
                        android:padding="5dp"
                        android:text=""
                        android:textSize="16sp" />
                </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="45dp"
                        android:background="#fff"
                        android:layout_marginLeft="10dp">

                        <EditText
                            android:id="@+id/edt_premium_lastname"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/create_event_input_bg"
                            android:hint="Last name"
                            android:inputType="textCapWords"
                            android:padding="5dp"
                            android:text=""
                            android:textSize="16sp" />
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_marginBottom="10dp"
                    android:visibility="visible">

                    <EditText
                        android:id="@+id/edt_premium_email"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/create_event_input_bg"
                        android:hint="Email"
                        android:inputType="textEmailAddress"
                        android:padding="5dp"
                        android:text=""
                        android:textSize="16sp" />

                </LinearLayout>

                <!--<LinearLayout-->
                    <!--android:layout_width="match_parent"-->
                    <!--android:layout_height="45dp"-->
                    <!--android:layout_marginBottom="10dp"-->
                    <!--android:visibility="visible">-->

                    <!--<EditText-->
                        <!--android:id="@+id/edt_premium_location"-->
                        <!--android:layout_width="match_parent"-->
                        <!--android:layout_height="match_parent"-->
                        <!--android:background="@drawable/create_event_input_bg"-->
                        <!--android:hint="Location"-->
                        <!--android:inputType="textCapWords"-->
                        <!--android:padding="5dp"-->
                        <!--android:paddingLeft="12dp"-->
                        <!--android:text=""-->
                        <!--android:textSize="16sp" />-->

                <!--</LinearLayout>-->

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:visibility="visible">

                    <EditText
                        android:id="@+id/edt_premium_aboutme"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/create_event_input_bg"
                        android:gravity="top|left"
                        android:hint="About me"
                        android:lines="4"
                        android:maxLength="300"
                        android:maxLines="5"
                        android:padding="5dp"
                        android:textSize="16sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_marginBottom="10dp"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:weightSum="4"
                    android:visibility="visible">

                    <View
                        android:layout_width="0dp"
                        android:layout_height="1px"
                        android:layout_weight="1"
                        android:background="@drawable/img_editprofile_divider" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:padding="10dp"
                        android:text="Optional" />

                    <View
                        android:layout_width="0dp"
                        android:layout_height="1px"
                        android:layout_weight="1"
                        android:background="@drawable/img_editprofile_divider" />

                </LinearLayout>

                <!--<LinearLayout-->
                    <!--android:layout_width="match_parent"-->
                    <!--android:layout_height="45dp"-->
                    <!--android:layout_marginBottom="10dp"-->
                    <!--android:gravity="center"-->
                    <!--android:visibility="visible">-->

                    <!--<TextView-->
                        <!--android:id="@+id/txt_premium_dob"-->
                        <!--android:layout_width="match_parent"-->
                        <!--android:layout_height="match_parent"-->
                        <!--android:background="@drawable/create_event_input_bg"-->
                        <!--android:gravity="center|left"-->
                        <!--android:hint="Dob"-->
                        <!--android:inputType="text"-->
                        <!--android:padding="5dp"-->
                        <!--android:textSize="16sp"-->
                        <!--/>-->

                <!--</LinearLayout>-->

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_marginBottom="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/create_event_input_bg"
                    android:gravity="center"
                    android:padding="5dp"
                    android:visibility="visible">

                    <Spinner
                        android:id="@+id/spinner_premium_gender"
                        style="@android:style/Widget.Spinner.DropDown"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/shape_drop_down_normal"
                        android:dropDownWidth="fill_parent" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_edit_contactname"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_marginBottom="10dp"
                    android:gravity="center"
                    android:visibility="gone">

                    <EditText
                        android:id="@+id/edt_premium_contactname"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/create_event_input_bg"
                        android:gravity="center|left"
                        android:hint="Contact name"
                        android:inputType="text"
                        android:padding="5dp"
                        android:textSize="16sp" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_edit_phone"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_marginBottom="10dp"
                    android:gravity="center"
                    android:visibility="gone">

                    <EditText
                        android:id="@+id/edt_premium_phone"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/create_event_input_bg"
                        android:gravity="center|left"
                        android:hint="Phone Number"
                        android:inputType="number"
                        android:padding="5dp"
                        android:textSize="16sp" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_edit_website"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_marginBottom="10dp"
                    android:gravity="center"
                    android:visibility="gone">

                    <EditText
                        android:id="@+id/edt_premium_website"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/create_event_input_bg"
                        android:gravity="center|left"
                        android:hint="Website"
                        android:inputType="text"
                        android:padding="5dp"
                        android:textSize="16sp" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_edit_ticketurl"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_marginBottom="10dp"
                    android:gravity="center"
                    android:visibility="gone">

                    <EditText
                        android:id="@+id/edt_premium_ticketurl"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/create_event_input_bg"
                        android:gravity="center|left"
                        android:hint="Ticketing url"
                        android:inputType="text"
                        android:padding="5dp"
                        android:textSize="16sp" />

                </LinearLayout>

                <!--<LinearLayout-->
                    <!--android:layout_width="match_parent"-->
                    <!--android:layout_height="45dp"-->
                    <!--android:layout_marginBottom="10dp"-->
                    <!--android:gravity="center"-->
                    <!--android:visibility="visible">-->

                    <!--<EditText-->
                        <!--android:id="@+id/edt_premium_address"-->
                        <!--android:layout_width="match_parent"-->
                        <!--android:layout_height="match_parent"-->
                        <!--android:background="@drawable/create_event_input_bg"-->
                        <!--android:gravity="center|left"-->
                        <!--android:hint="Default address"-->
                        <!--android:inputType="text"-->
                        <!--android:padding="5dp"-->
                        <!--android:textSize="16sp" />-->

                <!--</LinearLayout>-->

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="90dp"
                    android:layout_marginBottom="30dp"
                    android:gravity="center"
                    android:background="@drawable/create_event_input_bg"
                    android:orientation="vertical"
                    android:padding="10dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                    <TextView
                        android:id="@+id/txt_pre_search"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Search Distance"
                        android:textSize="18sp"
                        android:textColor="#000000"/>

                        <TextView
                            android:id="@+id/txt_pre_dist"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:textSize="18sp"
                            android:textColor="#000000"/>

                        <TextView
                            android:id="@+id/txt_pre_distmiles"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=" mi."
                            android:textSize="18sp"
                            android:textColor="#000000"/>

                    </LinearLayout>

                    <SeekBar
                        android:id="@+id/pre_seekbar"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:minHeight="2dp"
                        android:maxHeight="2dp"
                        android:thumbTint="#fff838"
                        android:progressDrawable="@drawable/progress"
                        android:thumb="@drawable/thumb"
                        android:layout_marginTop="10dp"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/txtPremiumProfile"
                        android:layout_width="130dp"
                        android:layout_height="35dp"
                        android:background="@drawable/create_flyer"
                        android:gravity="center"
                        android:text="Done"
                        android:textColor="#000000"
                        android:textSize="16sp" />
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>

    </ScrollView>
</RelativeLayout>
